@{
    ViewData["Title"] = "Home Page";
}

<button type="button" name="formBtn">
    Pilot Sign Up
</button>

<button type="button" name="formBtn">
    Passenger Sign Up
</button>

<a asp-action="Index" asp-controller="HomeController.cs">
    <button>Home Test Button</button>
    </a>



<html lang="en">
<body>
    <div class="container-fluid bg-1 text-center">
        <h3 class="margin">Want to fly?</h3>
        <h3>I'm a pilot</h3>
        <p>I want to fly other people</p>
        <a href="#" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-search"></span> Search for a passenger
        </a>
    </div>
    <div class="container-fluid bg-2 text-center">
        <h3 class="margin">I'm a passenger</h3>
        <p>I don't know how to fly but I want a short flight</p>
        <a href="#" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-search"></span> Search for a pilot
        </a>
    </div>
    <div class="container-fluid bg-3 text-center">
        <h3 class="margin">Want more info?</h3><br>
        <div class="row">
            <div class="col-sm-4">
                <p>Buy a gift card for fuel</p>
            </div>
            <div class="col-sm-4">
                <p>Buy a plane</p>
            </div>
            <div class="col-sm-4">
                <p>Buy a helicopter</p>
            </div>
        </div>
    </div>
    <img src="~/images/drone_yellow_cab_flying_to_pick_up_passenger.jpg" />
    <footer class="container-fluid bg-4 text-center">
        <p>Contact us <a href="https://www.evtolola.com/contact">evtolola.com</a></p>
    </footer>

</body>
</html>
